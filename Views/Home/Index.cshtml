@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex h-100 text-center text-bg-dark">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">

        <div class="px-3">
            <img id="logo-home" src="logo.png" height="250"/>
            @if (SignInManager.IsSignedIn(User))
            {
            <div class="container marketing">
                <div class="row mb-5">
                    <div class="@(User.IsInRole("Teacher") ? "col-lg-6" : "col-lg-12")">
                            <div class="card align-items-center border-0" style="background-color: transparent;">
                                <a class="stretched-link text-decoration-none" asp-area="" asp-controller="FlashcardSets" asp-action="Index"></a>
                            <svg xmlns="http://www.w3.org/2000/svg" width="128" height="128" fill="currentColor" class="bi bi-stack" viewBox="0 0 16 16">
                            <path d="m14.12 10.163 1.715.858c.22.11.22.424 0 .534L8.267 15.34a.598.598 0 0 1-.534 0L.165 11.555a.299.299 0 0 1 0-.534l1.716-.858 5.317 2.659c.505.252 1.1.252 1.604 0l5.317-2.66zM7.733.063a.598.598 0 0 1 .534 0l7.568 3.784a.3.3 0 0 1 0 .535L8.267 8.165a.598.598 0 0 1-.534 0L.165 4.382a.299.299 0 0 1 0-.535L7.733.063z"/>
                            <path d="m14.12 6.576 1.715.858c.22.11.22.424 0 .534l-7.568 3.784a.598.598 0 0 1-.534 0L.165 7.968a.299.299 0 0 1 0-.534l1.716-.858 5.317 2.659c.505.252 1.1.252 1.604 0l5.317-2.659z"/>
                            </svg>
                            <h2 class="fw-normal">Sets</h2>
                            <p>View sets of flashcards.</p>
                        </div>
                    </div><!-- /.col-lg-6 -->
                    @if (User.IsInRole("Teacher"))
                    {
                        <div class="col-lg-6">
                                <div class="card align-items-center border-0" style="background-color: transparent;">
                                    <a class="stretched-link text-decoration-none" asp-area="" asp-controller="Flashcards" asp-action="Index"></a>
                            <svg xmlns="http://www.w3.org/2000/svg" width="128" height="128" fill="currentColor" class="bi bi-card-text" viewBox="0 0 16 16">
                            <path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z"/>
                            <path d="M3 5.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3 8a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 8zm0 2.5a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5z"/>
                            </svg>
                            <h2 class="fw-normal">Flashcards</h2>
                            <p>View and search flashcards.</p>
                        </div>
                    </div><!-- /.col-lg-6 -->
                    }
                </div><!-- /.row -->
            @if (User.IsInRole("Teacher"))
            {
                <div class="row">
                    <div class="col-lg-6">
                                <div class="card align-items-center border-0" style="background-color: transparent;">
                                    <a class="stretched-link text-decoration-none" asp-area="" asp-controller="PromotionRequests" asp-action="Index"></a>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="128" height="128" fill="currentColor" class="bi bi-people-fill" viewBox="0 0 16 16">
                                        <path d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H7Zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm-5.784 6A2.238 2.238 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.325 6.325 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1h4.216ZM4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5Z" />
                                    </svg>
                            <h2 class="fw-normal">Manage Promotions</h2>
                            <p>Manage promotions of accounts.</p>
                        </div>
                    </div><!-- /.col-lg-6 -->
                    <div class="col-lg-6">
                                <div class="card align-items-center border-0" style="background-color: transparent;">
                                    <a class="stretched-link text-decoration-none" asp-area="" asp-controller="Reports" asp-action="Index"></a>
                            <svg xmlns="http://www.w3.org/2000/svg" width="128" height="128" fill="currentColor" class="bi bi-graph-up" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M0 0h1v15h15v1H0V0Zm14.817 3.113a.5.5 0 0 1 .07.704l-4.5 5.5a.5.5 0 0 1-.74.037L7.06 6.767l-3.656 5.027a.5.5 0 0 1-.808-.588l4-5.5a.5.5 0 0 1 .758-.06l2.609 2.61 4.15-5.073a.5.5 0 0 1 .704-.07Z"/>
                            </svg>
                            <h2 class="fw-normal">Reports</h2>
                            <p>View reports on statistics of sets.</p>
                        </div>
                    </div><!-- /.col-lg-6 -->
                </div>
            }
            </div>
            } else
            {
                <p class="lead">
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-lg btn-outline-dark fw-bold">Sign up today and start creating your own personalized flashcard sets!</a>
                </p>
            }
            
        </div>

        <footer class="mt-auto text-white-50">
        </footer>
    </div>
</div>

<style>
    #logo-home {
        margin-bottom: 6rem;
    }
</style>