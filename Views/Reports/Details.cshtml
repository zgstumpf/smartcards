@model assignment4.Models.Report

@{
    ViewData["Title"] = "Report";
}

<body onload="GetAverageRating('@Model.SetId.ToString()')">
    <h1>@Html.DisplayFor(model => model.Set.Name)</h1>

    <div>
        <h4>Report</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Set ID
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SetId)
            </dd>
            <dt class="col-sm-2">
                Set Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Set.Name)
            </dd>
            <dt class="col-sm-2">
                Views
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ViewCount.Count)
            </dd>
            <dt class="col-sm-2">
                Average Rating
            </dt>
            <dd class="col-sm-10" id="average-rating-in-report-details">

            </dd>
            <dt class="col-sm-2">
                Created Date
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Set.CreatedDate)
            </dd>
            <dt class="col-sm-2">
                Last Updated
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Set.UpdatedDate)
            </dd>
            <dt class="col-sm-2">
                Category
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Set.Category)
            </dd>
            <dt class="col-sm-2">
                Description
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Set.Description)
            </dd>
            <dt class="col-sm-2">
                Created by
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Set.User.UserName)
            </dd>
            <dt class="col-sm-2">
                See ratings 
            </dt>
            <dd class="col-sm-10">
                @Html.ActionLink("Ratings for Set", "RatingsForSet", "SetRatingv3", new { SetId = Model.SetId }, new { @class = "btn btn-sm btn-dark" })
            </dd>
            <dt class="col-sm-2">
                Go to set study screen
            </dt>
            <dd class="col-sm-10">
                @Html.ActionLink("Set Study screen", "Study", "FlashcardSets", new { id = Model.SetId }, new { @class = "btn btn-sm btn-dark" })
            </dd>
            <dt class="col-sm-2">
                View set
            </dt>
            <dd class="col-sm-10">
                @Html.ActionLink("View", "Details", "FlashcardSets", new { id = Model.SetId }, new { @class = "btn btn-sm btn-dark" })
            </dd>
            <dt class="col-sm-2">
                Edit set
            </dt>
            <dd class="col-sm-10">
                @Html.ActionLink("Edit", "Edit", "FlashcardSets", new { id = Model.SetId }, new { @class = "btn btn-sm btn-dark" })
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-secondary">Exit</a>
    </div>
</body>